<yas>

	<scene root="root" axis_length="8" />

	<views default="camera" >

		<perspective id="camera" near="0.1" far="500" angle="20">
			<from x="-0.0001" y="50" z="0" />
			<to x="0" y="0" z="0" />
		</perspective>

 		<ortho id="ortho" near="0.1" far="500" left="-15" right="15" top="15" bottom="-15">
			<from x="25" y="25" z="25" />
			<to x="0" y="0" z="0" />
		</ortho>

	</views>

	<ambient>

		<ambient r="0" g="0" b="0" a="1" />
		<background r="0" g="0" b="0" a="1" />

	</ambient>

	<lights>

		<omni id="omni1" enabled="1" >
			<location x="2" y="20" z="2" w="1" />
			<ambient r="0" g="0" b="0" a="1" />
			<diffuse r="1" g="1" b="1" a="1" />
			<specular r="0" g="0" b="0" a="1" />
		</omni>

		<omni id="omni2" enabled="1" >
			<location x="0" y="20" z="2" w="1" />
			<ambient r="0" g="0" b="0" a="1" />
			<diffuse r="1" g="1" b="1" a="1" />
			<specular r="0" g="0" b="0" a="1" />
		</omni>

		<omni id="omni3" enabled="1" >
			<location x="-6" y="20" z="0" w="1" />
			<ambient r="0" g="0" b="0" a="1" />
			<diffuse r="1" g="1" b="1" a="1" />
			<specular r="0" g="0" b="0" a="1" />
		</omni>

		<omni id="omni4" enabled="1" >
			<location x="-2" y="20" z="-2" w="1" />
			<ambient r="0" g="0" b="0" a="1" />
			<diffuse r="1" g="1" b="1" a="1" />
			<specular r="0" g="0" b="0" a="1" />
		</omni>

		<omni id="omni5" enabled="1" >
			<location x="5" y="20" z="5" w="1" />
			<ambient r="0" g="0" b="0" a="1" />
			<diffuse r="1" g="1" b="1" a="1" />
			<specular r="0" g="0" b="0" a="1" />
		</omni>

		<omni id="omni6" enabled="1" >
			<location x="1" y="20" z="-6" w="1" />
			<ambient r="0" g="0" b="0" a="1" />
			<diffuse r="1" g="1" b="1" a="1" />
			<specular r="0" g="0" b="0" a="1" />
		</omni>

		<omni id="omni7" enabled="1" >
			<location x="-6" y="20" z="-13" w="1" />
			<ambient r="0" g="0" b="0" a="1" />
			<diffuse r="1" g="1" b="1" a="1" />
			<specular r="0" g="0" b="0" a="1" />
		</omni>

		<spot id="spot1" enabled="1" angle="50" exponent="1">
			<location x="0" y="2" z="-4" w="1" />
			<target x="0" y="0" z="-4" />
			<ambient r="0" g="0" b="0" a="1" />
			<diffuse r="1" g="1" b="1" a="1" />
			<specular r="0" g="0" b="0" a="1" />
		</spot>

	</lights>

	<textures>

		<texture id="texture1" file="scenes/images/nyan.jpg" />
		<texture id="texture6" file="scenes/images/water.jpg" />
		<texture id="helicopter" file="scenes/images/h.png"/>
		<texture id="waterHeightmap" file="scenes/images/waterHeightmap3.jpg"/>
		<texture id="stands" file="scenes/images/stadium.jpg"/>
		<texture id="ice" file="scenes/images/ice.jpeg"/>

	</textures>

	<materials>

		<material id="material1" shininess="15" >
			<emission r="0" g="0" b="0" a="0" />
			<ambient r="0" g="0" b="0" a="0" />
			<diffuse r="1" g="1" b="1" a="1" />
			<specular r="0" g="0" b="0" a="0" />
		</material>

		<material id="material2" shininess="10" >
			<emission r="0" g="0" b="0" a="0" />
			<ambient r="0" g="0" b="0" a="0" />
			<diffuse r="1" g="1" b="1" a="1" />
			<specular r="0" g="0" b="0" a="0" />

		</material>

		<material id="material3" shininess="0" >
			<emission r="0" g="0" b="0" a="0" />
			<ambient r="1" g="1" b="1" a="1" />
			<diffuse r="1" g="1" b="1" a="1" />
			<specular r="0" g="0" b="0" a="0" />

		</material>

	</materials>

	<transformations>

		<transformation id="transformation1">
			<translate x="0" y="0" z="0" />
			<rotate axis="x" angle="0" />
			<scale x="1" y="1" z="1" />
		</transformation>

	</transformations>


	<animations>
		<linear id="linear1" span="10" >
			<controlpoint xx="0" yy="0" zz="0" />
			<controlpoint xx="5" yy="0" zz="5" />
			<controlpoint xx="5" yy="0" zz="0" />
		</linear>

		<circular id="circular" span="1" center="0 0 0" radius="5" startang="40" rotang="20" />

	</animations>


	<primitives>


		<primitive id="rectangle">
			<rectangle x1="0" y1="0" x2="2" y2="2"/>
		</primitive>


		<primitive id="water">
			<water idtexture="texture6" idwavemap="waterHeightmap" parts="200" heightscale="4" texscale="0.25"/>
		</primitive>

		<primitive id="board">
			<board />
		</primitive>


	</primitives>

	<components>
		<component id="root">
			<transformation>
			</transformation>
			<materials>
				<material id="material1" />
			</materials>
			<texture id="none" length_s="1" length_t="1" />
			<children>
				<componentref id="water" />
				<componentref id="floor"/>
				<componentref id="stand1"/>
				<componentref id="stand2"/>
				<componentref id="stand3"/>
				<componentref id="stand4"/>
				<!-- <componentref id="wall"/> -->

				<componentref id="board"/>
			</children>
		</component>
		<component id="water">
			<transformation>
				<translate x="0" y="-2" z="0"/>
				<scale x ="70" y="1" z="70"/>
			</transformation>
			<materials>
				<material id="inherit" />
			</materials>
			<texture id="texture6" length_s="0.25" length_t="0.1" />
			<children>
				<primitiveref id="water" />
			</children>
		</component>
		<component id="floor">
			<transformation>
				<translate x="-15" y="0.3" z="15"/>
				<rotate axis="x" angle="-90"/>
				<scale x ="15" y="15" z="0"/>
			</transformation>
			<materials>
				<material id="inherit" />
			</materials>
			<texture id="ice" length_s="2" length_t="2" />
			<children>
				<primitiveref id="rectangle" />
			</children>
		</component>
		<component id="stand1">
			<transformation>
				<translate x="-35" y="0" z="-20"/>
				<rotate axis="x" angle="-60"/>
				<scale x ="35" y="7" z="0"/>
			</transformation>
			<materials>
				<material id="inherit" />
			</materials>
			<texture id="stands" length_s="2" length_t="2" />
			<children>
				<primitiveref id="rectangle" />
			</children>
		</component>
		<component id="stand2">
			<transformation>
				<translate x="35" y="0" z="20"/>
				<rotate axis="x" angle="60"/>
				<rotate axis="y" angle="180"/>
				<scale x ="35" y="7" z="0"/>
			</transformation>
			<materials>
				<material id="inherit" />
			</materials>
			<texture id="stands" length_s="2" length_t="2" />
			<children>
				<primitiveref id="rectangle" />
			</children>
		</component>
		<component id="stand3">
			<transformation>
				<translate x="-25" y="0.5" z="35"/>
				<rotate axis="z" angle="30"/>
				<rotate axis="y" angle="90"/>
				<scale x ="35" y="5" z="0"/>
			</transformation>
			<materials>
				<material id="inherit" />
			</materials>
			<texture id="stands" length_s="2" length_t="2" />
			<children>
				<primitiveref id="rectangle" />
			</children>
		</component>
		<component id="stand4">
			<transformation>
				<translate x="25" y="0" z="-35"/>
				<rotate axis="z" angle="-60"/>
				<rotate axis="y" angle="-90"/>
				<scale x ="35" y="7" z="0"/>
			</transformation>
			<materials>
				<material id="inherit" />
			</materials>
			<texture id="stands" length_s="2" length_t="2" />
			<children>
				<primitiveref id="rectangle" />
			</children>
		</component>
		<!-- <component id="wall">
			<transformation>
				<translate x="-35" y="0" z="35"/>
				<rotate axis="y" angle="90"/>
				<scale x ="35" y="7" z="0"/>
			</transformation>
			<materials>
				<material id="inherit" />
			</materials>
			<texture id="ice" length_s="2" length_t="2" />
			<children>
				<primitiveref id="rectangle" />
			</children>
		</component> -->

		<component id="board">
			<transformation>
				<translate x="0" y="0.7" z="0"/>
			</transformation>
			<materials>
				<material id="inherit" />
			</materials>
			<texture id="inherit" length_s="1" length_t="1" />
			<children>
				<primitiveref id="board" />
			</children>
		</component>

	</components>
</yas>
